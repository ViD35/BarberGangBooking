<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bg_ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bg_ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BarberGangBooking">
        <activity
            android:name=".BookingActivity"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".ViewStatusScreen"
            android:exported="false" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="vid35.dev.barbergangbooking.ViewStatusScreen"/>
        </activity>
        <activity
            android:name=".ViewBookingActivity"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".ViewStatusScreen"
            android:exported="false" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="vid35.dev.barbergangbooking.ViewStatusScreen"/>
        </activity>
        <activity
            android:name=".ViewStatusScreen"
            android:exported="false"
            android:label="@string/title_activity_view_status_screen"
            android:theme="@style/Theme.BarberGangBooking.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>